<h1>Listing items</h1>

<table>
  <tr>
    <th>List</th>
    <th>Name</th>
    <th>Description</th>
    <th>Comment</th>
    <th>Completed at</th>
    <th>Completed</th>
    <th>Position</th>
    <th>Created at</th>
    <th>Updated at</th>
  </tr>

<% @items.each do |item| %>
  <tr>
    <td><%=h item.list_id %></td>
    <td><%=h item.name %></td>
    <td><%=h item.description %></td>
    <td><%=h item.comment %></td>
    <td><%=h item.completed_at %></td>
    <td><%=h item.completed %></td>
    <td><%=h item.position %></td>
    <td><%=h item.created_at %></td>
    <td><%=h item.updated_at %></td>
    <td><%= link_to 'Show', item %></td>
    <td><%= link_to 'Edit', edit_item_path(item) %></td>
    <td><%= link_to 'Destroy', item, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

