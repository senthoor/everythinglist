<h1>New list</h1>

<% form_for(@list) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name, :size => 52 %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description, :cols => 50, :rows => 3 %>
  </p>
	<div id="items">
		<%= render :partial => 'item', :collection => @list.items %>
	</div>	
	<%= add_task_link "Add List Item"%>

  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', lists_path %>