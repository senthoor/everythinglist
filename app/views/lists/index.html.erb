<h1>Listing lists</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Created at</th>
    <th>Updated at</th>
  </tr>

<% @lists.each do |list| %>
  <tr>
    <td><%=h list.name %></td>
    <td><%=h list.description %></td>
    <td><%=h list.created_at %></td>
    <td><%=h list.updated_at %></td>
    <td><%= link_to 'Show', list %></td>
    <td><%= link_to 'Edit', edit_list_path(list) %></td>
    <td><%= link_to 'Destroy', list, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />
<p>
<%= link_to 'Add New List', new_list_path %>
</p>